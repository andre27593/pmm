<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.mati.proyectofinal.Registro">

    <Button
        android:text="Guardar Usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guardar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="79dp" />

    <TextView
        android:text="USUARIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/usu"
        android:textStyle="bold"
        android:textSize="40px"
        android:textColor="@color/colorUsuario"
  />

    <Button
        android:text="Volver al login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/volver"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/contraseña"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cont"
        android:id="@+id/usuario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignBottom="@+id/confirmar"
        android:layout_alignStart="@+id/contraseña"
        android:id="@+id/conf" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignBottom="@+id/nombre"
        android:layout_alignParentEnd="true"
        android:id="@+id/nom" />

    <TextView
        android:text="CONFIRMAR CONTRASEÑA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:textStyle="bold"
        android:textSize="40px"
        android:textColor="@color/colorUsuario"
        android:id="@+id/confirmar"
        android:layout_below="@+id/cont"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/cont" />

    <TextView
        android:text="CONTRASEÑA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40px"
        android:textColor="@color/colorUsuario"
        android:id="@+id/cont"
        android:layout_alignBaseline="@+id/contraseña"
        android:layout_alignBottom="@+id/contraseña"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="NOMBRE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="40px"
        android:textColor="@color/colorUsuario"
        android:id="@+id/nombre"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="EMAIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/correo"
        android:textStyle="bold"
        android:textSize="40px"
        android:textColor="@color/colorUsuario"
        android:layout_above="@+id/guardar"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignBottom="@+id/correo"
        android:layout_alignParentEnd="true"
        android:id="@+id/email" />


</RelativeLayout>
